---
interface Props {
  description: string;
  qrcode: string[];
}

const { description, qrcode } = Astro.props;
---

<>
  <p>{description}</p>
  <div class="qr-grid">
    {qrcode.map((qr, index) => <img src={qr} alt={`QR Code ${index + 1}`} />)}
  </div>
  <slot />
</>

<style>
  p {
    text-align: center;
    margin-bottom: 15px;
  }
  .qr-grid {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-bottom: 15px;
    justify-content: center;
  }
  .qr-grid img {
    width: 40vh;
    border-radius: 5px;
  }
</style>
